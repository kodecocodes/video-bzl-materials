<resources xmlns:tools="http://schemas.android.com/tools">
    <!--    Splash Screen Theme-->


    <!-- Base application theme. -->
    <style name="Theme.BullseyeSample" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_accent</item>
        <item name="colorPrimaryVariant">@color/red_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.BullseyeSample.Light.NoActionBar.FullScreen" parent="@style/Theme.BullseyeSample">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="target_text">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="game_number_text">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="instruction_text">
        <item name="android:letterSpacing">0.2</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>